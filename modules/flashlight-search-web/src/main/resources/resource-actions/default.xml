<resource-action-mapping>
    <portlet-resource>
        <portlet-name>com_savoirfairelinux_flashlight_portlet_FlashlightSearchPortlet</portlet-name>
        <permissions>
            <supports>
                <action-key>ADD_PORTLET_DISPLAY_TEMPLATE</action-key>
                <action-key>ADD_TO_PAGE</action-key>
                <action-key>CONFIGURATION</action-key>
                <action-key>PREFERENCES</action-key>
                <action-key>VIEW</action-key>
                <action-key>HELP</action-key>
            </supports>
            <site-member-defaults>
                <action-key>VIEW</action-key>
            </site-member-defaults>
            <guest-defaults>
                <action-key>VIEW</action-key>
            </guest-defaults>
            <guest-unsupported>
                <action-key>ADD_PORTLET_DISPLAY_TEMPLATE</action-key>
                <action-key>ADD_TO_PAGE</action-key>
                <action-key>CONFIGURATION</action-key>
                <action-key>PREFERENCES</action-key>
                <action-key>HELP</action-key>
            </guest-unsupported>
        </permissions>
    </portlet-resource>
</resource-action-mapping>
